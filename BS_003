#include <iostream>
int calculateSteps(int n) {
    int count = 0;

    int x = 2;
    
    while (x < n / 2) {
        x *= 2;
        count++;  // Increment the count each time x is doubled
    }

    return count;
}

int main() {
    int n = 50;  // can change this to any number
    std::cout << "Steps: " << calculateSteps(n) << std::endl;
    return 0;
}


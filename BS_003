#include <iostream>
void updateValues(int n, int delta) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j += 10) {
            for (int k = 1; k <= j; k += 10) {
                int x = delta
                std::cout << "x = " << x << std::endl;
            }
        }
    }
}

int main() {
    int n = 50;      // value for n
    int delta = 5;   // value for delta
    
    updateValues(n, delta);
    
    return 0;
}


